---

generic:
  role_description: |
    Manage openssl and set-up keys & certificates
    
    #### TODO
    
    * Create server certificate sign-request for external CA
    * Setup optional internal Certificate Authority
    * Setup client/server certificates, signed by the internal CA

# Dependencies
dependencies:
  roles: []
  collections: []

# Platforms
platforms:
  alpine3:
    ci: true
    supported: true
  docker:
    ci: true
    supported: true

# Molecule
molecule:
  requirements:
    roles_extra:
      - python
  prepare:
    vars:
      activate_epel: true
  converge:
    roles:
      - python
    vars:
      openssl_fqdn: server.example.com
      openssl_fqdn_additional:
        - vhost1.example.com
        - vhost2.example.com
